<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "RememberabURL", '/', id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home",    root_path %></li>
          <li><%= link_to "Tags",    tags_path %></li>
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#"
                    class="dropdown-toggle"
                    data-toggle="dropdown">
                    My Account (<%= current_user.displayname? ? current_user.displayname : current_user.email %>)
                    <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li class="nav-header">Account</li>
                <li><a href="<%= edit_user_registration_url %>"><i class=" icon-user"></i> Profile</a>
                <li><a href="<%= users_links_url %>"><i class=" icon-list"></i> My Links</a>
                <li class="divider"></li>
                <li><%= link_to "Sign Out",  destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Register",  new_user_registration_path %></li>
            <li><%= link_to "Sign in",   new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
