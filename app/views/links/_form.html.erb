<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :url, "URL" %>
    <%= f.text_field :url, :placeholder => 'Enter a URL to save' %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :placeholder => 'Will use title of URL page if left empty' %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => '4', :placeholder => 'Optional' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary btn-large' %>
  </div>
<% end %>
